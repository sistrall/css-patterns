<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Bangers|Nothing+You+Could+Do' %>
    <%= stylesheet_link_tag "normalize", "all" %>
  </head>

  <body class="impress-not-supported <%= page_classes %>">
    <div id="impress" data-transition-duration="500">
      <%= yield %>
    </div>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/impress.js/0.5.3/impress.min.js' %>
    <%= javascript_include_tag 'all' %>
    <script>impress().init();</script>
  </body>
</html>
